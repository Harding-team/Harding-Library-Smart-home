<view class="order"><block wx:for="{{orderArr}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="commodity"><block wx:if="{{item.orderNumber}}"><view class="orderNumber"><text>{{"订单编号:"+item.orderNumber}}</text><text style="color:#24ab63;font-size:26rpx;">订单完成</text></view></block><view data-event-opts="{{[['tap',[['goToDetails',['$0'],[[['orderArr','',index,'id']]]]]]]}}" class="info" bindtap="__e"><image src="{{item.imgSrc}}"></image><view class="info-r"><view class="info-r-top"><view class="info-name">{{item.title}}</view><view class="info-price"><text>¥</text>{{item.price}}</view></view><view class="info-r-btm"><view>{{item.description}}</view><view class="info-num">{{"x"+item.count}}</view></view><view class="tobepaid"><block wx:if="{{!item.orderNumber}}"><text>待支付</text></block></view></view></view><view class="allPrice">{{"共计"+item.count+"件商品合计:"}}<text style="color:red;">{{"￥"+item.count*item.price}}</text>{{'(含运费 ￥'+item.freight+")"}}</view><block wx:if="{{item.orderNumber}}"><view class="btn"><view class="delete">删除</view><view class="evaluation">评价</view></view></block><block wx:else><view class="btn"><view class="cancelOrder">取消订单</view><view class="toPay">去支付</view></view></block></view></block></view>